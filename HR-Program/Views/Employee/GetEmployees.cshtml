@{ ViewData["Title"] = "Employees"; }
@model List<Employee>

<h2>Employee List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <thead>
        <tr>
            <th>Personal Number</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Date of Birth</th>
            <th>Phone</th>
            <th>Status</th>
            <th>Leave Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.PersonalNumber</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Gender</td>
                <td>@employee.DateOfBirth</td>
                <td>@employee.Phone</td>
                <td>@employee.Status</td>
                <td>@employee.LeaveDate</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = employee.IdEmployee }) |
                    @Html.ActionLink("Delete", "Delete", new { id = employee.IdEmployee }, new { onclick = "return confirm('Are you sure you want to delete this employee?');" })
                </td>
            </tr>
        }
    </tbody>
</table>