@model Employee

<h2>Edit Employee</h2>
@if (TempData["Message"] != null)
{
<script>alert("@TempData["Message"]");</script>
}

<form asp-controller="Employee" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="PersonalNumber">Personal Number</label>
        <input asp-for="PersonalNumber" class="form-control" />
        @Html.ValidationMessageFor(model => model.PersonalNumber, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="FirstName">First Name:</label>
        <input asp-for="FirstName" class="form-control">
        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name:</label>
        <input asp-for="LastName" class="form-control">
        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div class="form-check-inline">
            <input asp-for="Gender" class="form-check-input" type="radio" value="Male">
            <label asp-for="Gender" class="form-check-label">
                Male
            </label>
        </div>
        <div class="form-check-inline">
            <input asp-for="Gender" class="form-check-input" type="radio" value="Female">
            <label asp-for="Gender" class="form-check-label">
                Female
            </label>
        </div>
        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="dateOfBirth">Date of Birth</label>
        <input asp-for="DateOfBirth" type="date" class="form-control datetimepicker-input" data-target="#datetimepicker2" />
        @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone:</label>
        <input asp-for="Phone" class="form-control">
        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="IdStatus">Status:</label>
        <select asp-for="IdStatus">
            <option value="1">Works</option>
            <option value="2">In reserve</option>
            <option value="3">Released</option>
        </select>
    </div>
    <div class="form-group">
        <input asp-for="LeaveDate" type="date" class="form-control datetimepicker-input" data-target="#datetimepicker2" />
        <label asp-for="LeaveDate">Leave Date:</label>
        @Html.ValidationMessageFor(model => model.LeaveDate, "", new { @class = "text-danger" })
    </div>
    <input type="hidden" asp-for="IdEmployee" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>