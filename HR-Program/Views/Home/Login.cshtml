@{ ViewData["Title"] = "Login Page"; }

@model User

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <divc class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                @if (TempData["Message"] != null)
                                {
                                    <script>alert("@TempData["Message"]");</script>
                                }
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign in</p>
                                <form asp-controller="Home" asp-action="Login" >
                                    <!-- Email input -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="Email" type="email" class="form-control form-control-lg"
                                               placeholder="Enter your email address" />
                                        <label asp-for="Email" class="form-label">Email address</label>
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>

                                    <!-- Password input -->
                                    <div class="form-outline mb-3">
                                        <input asp-for="Password" type="password" class="form-control form-control-lg"
                                               placeholder="Enter password" />
                                        <label asp-for="Password" class="form-label">Password</label>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <!-- Checkbox -->
                                        <div class="form-check mb-0">
                                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                                            <label class="form-check-label" for="form2Example3">
                                                Remember me
                                            </label>
                                        </div>
                                        <a href="#!" class="text-body">Forgot password?</a>
                                    </div>

                                    <div class="text-center text-lg-start mt-4 pt-2">
                                        <button type="submit" value="@Model" class="btn btn-primary btn-lg"
                                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                            Login
                                        </button>
                                        <p class="medium fw-bold mt-4 pt-2 mb-0">
                                            Don't have an account? <a class="link-danger" asp-area="" asp-controller="Home" asp-action="Registration">Register</a>
                                        </p>
                                    </div>

                                </form>
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="~/img/Logo.png"
                                     class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>

                </divc>
            </div>

        </div>
    </div>

</section>